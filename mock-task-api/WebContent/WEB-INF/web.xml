<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>mock-task-api</display-name>
  
  <servlet>
    <servlet-name>TaskJson</servlet-name>
    <servlet-class>com.seer.service.TaskJson</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>TaskXml</servlet-name>
    <servlet-class>com.seer.service.TaskXml</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>TaskJson</servlet-name>
    <url-pattern>/json/tasks</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>TaskXml</servlet-name>
    <url-pattern>/xml/tasks</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>